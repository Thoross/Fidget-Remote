html(ng-app='fidgetStream')
    head
        title Fidget Remote
        meta(name="viewport" content="width=device-width, initial-scale=1.0" )
        link(href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css')
        link(rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/less/main.css")
    body
        h1.site-header
            span.thin Fidget
            span.thick Remote
            br
            .thiner A Twitch.tv Remote
        div(ng-controller='screenController')

            div(ng-show='loaded')
                screen(channel='channel')

        script(src="/angular/angular.min.js")
        script(src="/angular-socket-io/socket.js")
        script(src="/socket.io-client/dist/socket.io.js")
        script(src='/ngInfiniteScroll/ng-infinite-scroll.js')
        script(src='http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js')
        script(src='/app.js')